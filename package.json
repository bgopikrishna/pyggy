{
    "name": "pygyy",
    "version": "0.0.1",
    "description": "A goal tracker",
    "main": "server.js",
    "repository": "https://github.com/bgopikrishna/pyggy",
    "author": "Gopi Krishna <gopiwayz@gmail.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "server": "nodemon --watch server --exec babel-node server/server.js",
        "client": "yarn  --cwd client start",
        "start:dev": "concurrently \"yarn  --cwd client start\" \"yarn server\"",
        "build:client": "yarn build --prefix client",
        "build:server": "babel server -d dist",
        "start:prod": "export NODE_ENV=production && node  dist/server.js",
        "heroku-postbuild": "yarn build:server"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.0",
        "bcrypt": "^3.0.7",
        "body-parser": "^1.19.0",
        "concurrently": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "joi-objectid": "^3.0.1",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^5.8.11"
    },
    "devDependencies": {
        "@babel/cli": "^7.8.4",
        "@babel/core": "^7.8.4",
        "@babel/node": "^7.8.4",
        "@babel/preset-env": "^7.8.4",
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-node": "^4.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-flowtype": "^4.6.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^1.7.0",
        "husky": "^4.2.1",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "engines": {
        "node": "12.x"
    },
    "nodemonConfig": {
        "ignore": [
            "client/*"
        ]
    }
}
