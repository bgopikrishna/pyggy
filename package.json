{
    "name": "pygyy",
    "version": "0.0.1",
    "description": "A goal tracker",
    "main": "server.js",
    "repository": "https://github.com/bgopikrishna/pyggy",
    "author": "Gopi Krishna <gopiwayz@gmail.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "server": "nodemon server.js",
        "client": "yarn --cwd client start",
        "start:dev": "NODE_ENV=development concurrently \"yarn client\" \"yarn server\"",
        "build:client": "yarn --cwd client build ",
        "start": "NODE_ENV=production  pm2 --no-daemon start server.js",
        "heroku-postbuild": "yarn install --cwd client && yarn build:client"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.0",
        "bcrypt": "^3.0.7",
        "body-parser": "^1.19.0",
        "concurrently": "^5.1.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "helmet": "^3.22.0",
        "joi-objectid": "^3.0.1",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^5.8.11",
        "nodemailer": "^6.4.8",
        "pm2": "^4.3.1",
        "redis": "^3.0.2"
    },
    "devDependencies": {
        "@commitlint/cli": "^8.3.5",
        "@commitlint/config-conventional": "^8.3.4",
        "eslint": "^6.8.0",
        "eslint-config-airbnb": "^18.0.1",
        "eslint-config-node": "^4.0.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-flowtype": "^4.6.0",
        "eslint-plugin-import": "^2.18.2",
        "eslint-plugin-jsx-a11y": "^6.2.3",
        "eslint-plugin-node": "^11.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.14.3",
        "eslint-plugin-react-hooks": "^1.7.0",
        "husky": "^4.2.1",
        "nodemon": "^2.0.2",
        "prettier": "^1.19.1"
    },
    "husky": {
        "hooks": {
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    },
    "engines": {
        "node": "12.x"
    },
    "nodemonConfig": {
        "ignore": [
            "client/*"
        ]
    }
}